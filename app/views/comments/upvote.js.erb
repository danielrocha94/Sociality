$(document).ready(function() {
	$("#vote-<%=@vote.id%>").html('<%= pluralize((@vote.upvotes - @vote.downvotes), 'point')%>');

  var upvote_btn = $(".btn-upvote-<%=@selected.id%>");
  var downvote_btn = $(".btn-downvote-<%=@selected.id%>");

  if (upvote_btn.hasClass("color-green fa-lg")) {
    upvote_btn.removeClass("color-green fa-lg");
    return true;
  } else {
    upvote_btn.addClass("color-green fa-lg");
    if (downvote_btn.hasClass("color-red fa-lg")) {
      downvote_btn.removeClass("color-red fa-lg");
    }
    return true;
  }

});
